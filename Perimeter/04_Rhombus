import java.util.Scanner;

public class Perimeter {
    public static void main(String[] args) {
        float side;
        Scanner s = new Scanner(System.in);
        System.out.println("Enter side :~ ");
        side = s.nextFloat();
        System.out.println("Perimeter of given Rhombus ~ " + 4*side);
        s.close();

    }

}
